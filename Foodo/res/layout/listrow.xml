<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="75px"
  android:orientation="horizontal">
  <!--
  	<ImageView  android:src="@drawable/restlogo"
   			android:layout_width="95px"
   			android:layout_height="54px"
   	/>
      -->
   	<LinearLayout
   	 xmlns:android="http://schemas.android.com/apk/res/android"
   	 android:layout_width="fill_parent"
  	 android:layout_height="75px"
  	 android:orientation="vertical">
  		
   		<TextView android:id="@+id/restaurant"
   			android:layout_width="wrap_content"
   			android:layout_height="wrap_content"
   			android:textSize="18sp"
         	android:textStyle="bold"
         	android:maxLines="1"
   			android:text="@string/no_rest" 
   			android:layout_marginLeft="11px"/>
   			
   		<RelativeLayout
   		     xmlns:android="http://schemas.android.com/apk/res/android"
   	 		 android:layout_width="fill_parent"
  	 		 android:layout_height="wrap_content"
  	 		 android:orientation="horizontal" 
  	 		 android:paddingRight="15px"
  	 		 android:paddingLeft="15px"
  	 		 >
  			
  			<TextView android:id="@+id/reAddress"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:layout_alignParentLeft="true"
			/>
  			<ImageView android:id="@+id/ReStar1"
				android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/star"
			    android:layout_alignParentRight="true"
			    />
			<TextView android:id="@+id/ReRating"
  				android:layout_width="wrap_content"
  				android:layout_height="wrap_content"
  				android:layout_toLeftOf="@+id/ReStar1"
  				/>
			<!--  
			<ImageView android:id="@+id/ReStar2"
			  	android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/star"/>
			<ImageView android:id="@+id/ReStar3"
			  	android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:src="@drawable/star"/>
  			-->
  		</RelativeLayout>
  		<LinearLayout
   		 	xmlns:android="http://schemas.android.com/apk/res/android"
   			 android:layout_width="fill_parent"
 		 	 android:layout_height="wrap_content"
 		 	 android:orientation="horizontal">
	   		<TextView android:id="@+id/reZip"
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:paddingLeft="15px"/>
	   		<TextView android:id="@+id/reCity"
	   			android:layout_width="wrap_content"
	   			android:layout_height="wrap_content"
	   			android:layout_marginLeft="5px"/>
		</LinearLayout>
    </LinearLayout>
</LinearLayout>
