<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="5dip">
  	
  	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal"
    	android:paddingBottom="2dip">
		<TextView android:id="@+id/nrMenu"
	  				android:layout_width="wrap_content"
	  				android:layout_height="wrap_content"
	  				android:text="#. "
	  				android:textSize="16dip"
	  				android:layout_alignParentTop="true"
		/>
		<TextView android:id="@+id/nameMenu"
	  				android:layout_width="wrap_content"
	  				android:layout_height="wrap_content"
	  				android:text="Name"
	  				android:textSize="16dip"
	  				android:paddingLeft="4dip"
	  				android:layout_toRightOf="@id/nrMenu"
	  				android:layout_alignParentTop="true"
	  				android:layout_alignParentRight="true"
		/>
	</LinearLayout>
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:orientation="horizontal">
	<TextView android:id="@+id/priceText"
 				android:layout_width="wrap_content"
 				android:layout_height="wrap_content"
 				android:text="Price: "

		        android:layout_marginTop="2dip"
		/>
	<TextView android:id="@+id/priceMenu"
 				android:layout_width="wrap_content"
 				android:layout_height="wrap_content"
 				android:text="Sample"
				
		        android:layout_marginTop="2dip"
		/>
    </LinearLayout>
	<TextView android:id="@+id/menuFill"
 				android:layout_width="fill_parent"
 				android:layout_height="fill_parent"
 				android:inputType="textMultiLine"
 				android:layout_below="@id/priceMenu"
		/>
</LinearLayout>
